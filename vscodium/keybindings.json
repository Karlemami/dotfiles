// Place your key bindings in this file to override the defaults
[
  // Navigate buffers
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown"
    },
  {
    // Navigate in command prompt and other menus
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenNavigateNext",
    "when": " inQuickInput"
  },
  {
    // Navigate in command prompt and other menus
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenNavigatePrevious",
    "when": " inQuickInput"
  },
  {
    // Navigate completions
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    // Navigate completions
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  /////////////////////////////////////////////////////////////////////////////////////////// SIDEBAR

  {
    "key": "space b",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "sideBarFocus && !inputFocus"
  },
  {
    "key": "space b",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "!activeEditorGroupEmpty && vim.mode == 'Normal' && editorTextFocus || (notebookEditorFocused && !textInputFocus)"
  },
  {
    "key": "space g e",
    "command": "workbench.view.explorer",
    "when": "!activeEditorGroupEmpty && vim.mode == 'Normal' && editorTextFocus || (notebookEditorFocused && !textInputFocus)"
  },
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "f",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "y",
    "command": "filesExplorer.copy",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
  },
  {
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "space g x",
    "command": "workbench.view.extensions",
    "when": "!activeEditorGroupEmpty && vim.mode == 'Normal' && editorTextFocus || (notebookEditorFocused && !textInputFocus)"
  },
  {
    "key": "space g d",
    "command": "workbench.view.debug",
    "when": "!activeEditorGroupEmpty && vim.mode == 'Normal' && editorTextFocus || (notebookEditorFocused && !textInputFocus)"
  },
  {
    "key": "space g g",
    "command": "workbench.view.scm",
    "when": "!activeEditorGroupEmpty && vim.mode == 'Normal' && editorTextFocus || (notebookEditorFocused && !textInputFocus)"
  },
  {
    "key" : "space g c",
    "command": "workbench.action.chat.openEditSession",
    "when": "!activeEditorGroupEmpty && vim.mode == 'Normal' && editorTextFocus || (notebookEditorFocused && !textInputFocus)"
  },
  {
    "key" : "space g t",
    "command": "workbench.view.extension.todo-tree-container",
    "when": "!activeEditorGroupEmpty && vim.mode == 'Normal' && editorTextFocus || (notebookEditorFocused && !textInputFocus)"
  },
  {
    "key" : "space g l",
    "command": "workbench.view.extension.latex-workshop-activitybar",
    "when": "!activeEditorGroupEmpty && vim.mode == 'Normal' && editorTextFocus || (notebookEditorFocused && !textInputFocus)"
  },
  
  /////////////////////////////////////////////////////////////////////////////////////////// SIDEBAR
  {
    "key": "space n",
    "command": "workbench.action.openNextRecentlyUsedEditor",
    "when": "!activeEditorGroupEmpty && vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space p",
    "command": "workbench.action.openPreviousRecentlyUsedEditor",
    "when": "!activeEditorGroupEmpty && vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space t",
    "command": "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
    "when": "!activeEditorGroupEmpty && vim.mode == 'Normal' && editorTextFocus || (notebookEditorFocused && !textInputFocus)"
  },
  {
    "key": "ctrl+tab",
    "command": "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
    "when": "!activeEditorGroupEmpty"
  },
  {
    "key": "j",
    "command": "workbench.action.quickOpenNavigateNextInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen"
  },
  {
    "key": "k",
    "command": "workbench.action.quickOpenNavigatePreviousInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen"
  },
]